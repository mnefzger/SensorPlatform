<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="mnefzger.de.sensorplatform.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:weightSum="1">

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="AccX:"
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:id="@+id/accXText" />

        <TextView
            android:text="AccY:"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:id="@+id/accYText"
            android:layout_below="@+id/accXText"
            android:layout_marginTop="11dp" />

        <TextView
            android:text="AccZ:"
            android:layout_width="293dp"
            android:layout_height="wrap_content"
            android:id="@+id/accZText"
            android:layout_below="@+id/accYText"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp" />

        <TextView
            android:text="RotX:"
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:id="@+id/rotXText"
            android:layout_below="@+id/accZText"
            android:layout_alignParentStart="true"
            android:layout_marginTop="36dp" />

        <TextView
            android:text="RotY:"
            android:layout_width="287dp"
            android:layout_height="wrap_content"
            android:id="@+id/rotYText"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/rotXText"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="RotZ:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rotZText"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/rotYText"
            android:layout_alignParentStart="true"
            android:layout_weight="0.18" />

        <TextView
            android:text="Lon:"
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:id="@+id/lonText"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/latText"
            android:layout_alignStart="@+id/latText"
            android:layout_weight="0.18" />

        <TextView
            android:text="Lat:"
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:id="@+id/latText"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/accYText" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2">

            <TextView
                android:text="Speed:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/speedText"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/lonText"
                android:layout_alignStart="@+id/lonText"
                android:layout_weight="0.10"
                android:layout_span="1"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Face detected: NO"
                android:id="@+id/faceText"
                android:layout_weight="0.15"
                android:layout_gravity="right"
                android:layout_column="0"
                android:layout_span="2" />

        </TableRow>

    </TableLayout>

</RelativeLayout>
