<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape>
            <gradient
                android:startColor="#3382b1ff"
                android:endColor="#3382b1ff"
                android:angle="0" />
            <stroke
                android:width="0dp"
                android:color="#4482b1ff" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#9d82b1ff"
                android:endColor="#9d82b1ff"
                android:angle="0" />
            <stroke
                android:width="2dp"
                android:color="#ee82b1ff" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#9d82b1ff"
                android:endColor="#9d82b1ff"
                android:angle="0" />
            <stroke
                android:width="0dp"
                android:color="#9e82b1ff" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

</selector>