<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.AppFragment">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:keepScreenOn="true"
        tools:context=".Core.MainActivity">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/linearLayout">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_weight="0.5">

                <TextView
                    android:text="RotX:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rotXText"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:text="RotY:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rotYText"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:text="RotZ:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rotZText"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.18" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

                <TextView
                    android:text="AccX:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/accXText" />

                <TextView
                    android:text="AccY:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/accYText"
                    android:layout_marginTop="11dp" />

                <TextView
                    android:text="AccZ:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/accZText"
                    android:layout_marginTop="10dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

                <TextView
                    android:text="Lat:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/latText"/>

                <TextView
                    android:text="Lon:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lonText"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:text="Speed:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/speedText"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:text="Heart Rate:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/heartText"
                    android:layout_marginTop="10dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">
                <TextView
                    android:text="Light:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lightText" />
                <TextView
                    android:text="OBD RPM:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/obdSpeedText"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:text="OBD Speed:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/obdRPMText"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:text="OBD Fuel:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/obdFuelText"
                    android:layout_marginTop="10dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="180dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text=""
                    android:id="@+id/osmText"
                    android:layout_marginTop="25dp"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/eventText"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/faceText"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp" />
            </LinearLayout>

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.75">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Stop"
                    android:id="@+id/stopButton"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="@color/abc_primary_text_material_dark"
                    android:layout_above="@+id/pauseButton"
                    android:layout_alignEnd="@+id/resumeButton"
                    android:layout_marginBottom="5dp" />
                <Button
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Pause"
                    android:id="@+id/pauseButton"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="@color/abc_primary_text_material_dark"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:textSize="10dp" />
                <Button
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Resume"
                    android:id="@+id/resumeButton"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="@color/abc_primary_text_material_dark"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="10dp"
                    android:enabled="false"/>
            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>

</FrameLayout>
