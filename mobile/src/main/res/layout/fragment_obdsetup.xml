<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.SetupFirstFragment"
    android:background="@color/colorPrimary">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:paddingBottom="60dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="New Study (3/5)"
                android:id="@+id/textView2"
                android:layout_weight="0.2"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="25dp"
                android:textSize="25sp"
                android:textColor="#fff"
                android:textStyle="bold" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="25dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Use external OBD-II adapter"
                    android:labelFor="@+id/obd_checkbox"
                    android:textSize="19sp"
                    android:gravity="center_vertical"
                    android:textColor="#fff"
                    android:layout_weight="0.8" />

                <android.support.v7.widget.AppCompatCheckBox
                    android:layout_width="50dp"
                    android:layout_height="35dp"
                    android:id="@+id/obd_checkbox"
                    android:layout_marginLeft="25dp"
                    android:textColor="#fff"
                    android:textColorHighlight="#fff"
                    android:textColorHint="#fff"
                    android:textColorLink="#fff"
                    android:layout_weight="0.2" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:background="#80ffffff"></LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please select the OBD-II adapter you want to use."
                    android:id="@+id/textView4"
                    android:textSize="19sp"
                    android:textColor="#fff" />

                <ListView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/listView"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp" />

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/next_button">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:textSize="22dp"
                android:textStyle="bold"
                android:text="User Phone"
                android:id="@+id/textView3"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="60dp"
                android:textColor="#fff"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="32dp"
                android:id="@+id/imageView2"
                android:src="@drawable/arrow"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="25dp" />
        </FrameLayout>

    </FrameLayout>

</FrameLayout>
