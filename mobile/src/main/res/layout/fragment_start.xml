<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mnefzger.de.sensorplatform.UI.StartFragment"
    android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
    android:background="@drawable/gradient"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:columnCount="1"
        android:rowCount="2">

        <ImageView
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:id="@+id/imageView"
            android:src="@drawable/app_icon"
            android:layout_weight="0.5"
            android:layout_alignParentBottom="false"
            android:layout_centerHorizontal="true"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:padding="15dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/app_name"
            android:id="@+id/textView"
            android:layout_centerVertical="true"
            android:textSize="35dp"
            android:textAlignment="center"
            android:layout_weight="0.5"
            android:layout_marginTop="25dp" />
    </GridLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.6">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="bottom">

            <Button
                android:layout_width="290dp"
                android:layout_height="60dp"
                android:text="New Study"
                android:id="@+id/newStudyButton"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/start_button"
                android:layout_marginBottom="25dp"
                android:textSize="23dp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:textColor="@drawable/start_button_text_color" />

            <Button
                android:layout_width="290dp"
                android:layout_height="60dp"
                android:text="Current Study"
                android:id="@+id/currentStudyButton"
                android:background="@drawable/start_button"
                android:textSize="23dp"
                android:layout_marginBottom="25dp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:textColor="@drawable/start_button_text_color"
                android:enabled="false"
                />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
