<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:background="@color/colorPrimary"
        android:id="@+id/firstLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:layout_weight="1"
            android:textColor="#fff"
            android:textSize="19sp"
            android:text="On the next screen, please allow the application to read incoming notifications. " />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Setup"
            android:id="@+id/study_topbar_text"
            android:layout_weight="0.2"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="25dp"
            android:textSize="25sp"
            android:textColor="#fff"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="25dp"
        android:id="@+id/setupLayout"
        android:paddingRight="25dp"
        android:layout_marginTop="55dp"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please select the research smartphone:"
            android:id="@+id/textView"
            android:textSize="19sp"
            android:textColor="#fff"
            android:layout_marginBottom="15dp" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deviceListView" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:layout_marginTop="55dp"
        android:paddingLeft="25dp"
        android:id="@+id/successLayout"
        android:paddingRight="25dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:id="@+id/successText"
                android:textSize="19sp"
                android:textColor="@color/colorAccent" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView"
                android:src="@drawable/done"
                android:layout_marginLeft="5dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You can now close this application."
            android:id="@+id/textView2"
            android:textColor="#fff"
            android:textSize="19sp"
            android:layout_marginTop="25dp" />
    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/next_button">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:textSize="22dp"
                android:textStyle="bold"
                android:text="Notification Settings"
                android:id="@+id/textView4"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="60dp"
                android:textColor="#fff"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="32dp"
                android:id="@+id/imageView2"
                android:src="@drawable/arrow"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="25dp" />
        </FrameLayout>

    </FrameLayout>

</FrameLayout>